{
  "name": "@iota-wiki/core",
  "version": "1.1.0",
  "scripts": {
    "docusaurus": "docusaurus",
    "start": "yarn build && yarn serve",
    "start:iota": "ENVIRONMENT=iota docusaurus start",
    "start:shimmer": "ENVIRONMENT=shimmer docusaurus start",
    "start:next": "ENVIRONMENT=next docusaurus start",
    "start:all": "yarn build:all && yarn serve",
    "build": "yarn build:iota && yarn build:shimmer && yarn build:next",
    "build:iota": "(ENVIRONMENT=iota; yarn gen-api-docs && docusaurus build --out-dir build)",
    "build:shimmer": "(ENVIRONMENT=shimmer; yarn gen-api-docs && docusaurus build --out-dir build/shimmer)",
    "build:next": "(ENVIRONMENT=next; yarn gen-api-docs && docusaurus build --out-dir build/next)",
    "build:all": "(CONTENT=\"*,*/*,*/*/*\"; yarn checkout && yarn build)",
    "build:production": "(MODE=\"production\" CONTENT=\"*,*/*,*/*/*\"; yarn checkout:remote && yarn build)",
    "swizzle": "docusaurus swizzle",
    "deploy": "docusaurus deploy",
    "clear": "docusaurus clear",
    "serve": "docusaurus serve",
    "write-translations": "docusaurus write-translations",
    "write-heading-ids": "docusaurus write-heading-ids",
    "lint": "eslint --cache --fix .",
    "lint:check": "eslint --cache .",
    "format": "prettier --cache --write .",
    "format:check": "prettier --cache --check .",
    "format:svg": "svgo ./src/**/*.svg",
    "checkout": "git submodule update --init",
    "checkout:remote": "yarn checkout --remote",
    "gen-api-docs": "docusaurus gen-api-docs all"
  },
  "dependencies": {
    "@algolia/client-search": "^4.14.1",
    "@docusaurus/core": "2.2.0",
    "@docusaurus/plugin-client-redirects": "2.2.0",
    "@docusaurus/plugin-ideal-image": "2.2.0",
    "@docusaurus/preset-classic": "2.2.0",
    "@iota-wiki/plugin-tutorial": "^1.0.6",
    "@mdx-js/react": "^1.6.21",
    "@popperjs/core": "^2.11.5",
    "@svgr/webpack": "^5.5.0",
    "callsite": "^1.0.0",
    "clsx": "^1.2.1",
    "docusaurus-plugin-matomo": "^0.0.5",
    "docusaurus-plugin-openapi-docs": "^1.4.7",
    "docusaurus-theme-openapi-docs": "^1.4.7",
    "file-loader": "^6.2.0",
    "flickity": "2.3.0",
    "flickity-fade": "^2.0.0",
    "hast-util-is-element": "1.1.0",
    "plugin-image-zoom": "flexanalytics/plugin-image-zoom",
    "raw-loader": "^4.0.2",
    "react": "17.0.2",
    "react-collapsible": "^2.8.4",
    "react-dom": "17.0.2",
    "react-flickity-component": "^3.6.3",
    "react-image-gallery": "^1.2.7",
    "react-player": "^2.9.0",
    "react-popper": "^2.3.0",
    "react-select": "^5.2.2",
    "rehype-katex": "4",
    "remark-code-import": "^0.3.0",
    "remark-import-partial": "^0.0.2",
    "remark-math": "^3.0.1",
    "remark-remove-comments": "^0.2.0",
    "require-glob": "^4.1.0",
    "url-loader": "^4.1.1",
    "webpack": "^5.73.0"
  },
  "resolutions": {
    "@types/react": "17.0.2",
    "@types/react-dom": "17.0.2"
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@docusaurus/module-type-aliases": "2.2.0",
    "@docusaurus/plugin-google-gtag": "2.2.0",
    "@tsconfig/docusaurus": "^1.0.6",
    "@types/react": "17.0.2",
    "@types/react-dom": "17.0.2",
    "@types/webpack-env": "^1.16.3",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.26.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "prettier": "^2.4.1",
    "svgo": "^2.8.0",
    "typescript": "^4.5.4"
  },
  "packageManager": "yarn@3.2.0",
  "workspaces": [
    "cli"
  ],
  "files": []
}
